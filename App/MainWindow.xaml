<Window x:Class="Codevoid.Storyvoid.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MinWidth="350">
        <TextBlock FontSize="72"
                   FontWeight="ExtraLight"
                   x:Name="AlreadyAuthedTextBlock" />
        <TextBlock>E-Mail</TextBlock>
        <TextBox PlaceholderText="Your username..."
                 Text="{x:Bind ViewModel.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 InputScope="EmailSmtpAddress"
                 IsSpellCheckEnabled="False"
                 IsTextPredictionEnabled="False" />
        <TextBlock>Password</TextBlock>
        <PasswordBox PlaceholderText="... your password"
                     Password="{x:Bind ViewModel.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Button IsEnabled="{x:Bind ViewModel.CanVerify, Mode=OneWay}"
                Click="Authenticate_Click">Login</Button>
        <Button Click="ClearCredentials_Click">Clear saved credentials</Button>
        <ProgressRing IsIndeterminate="{x:Bind ViewModel.IsWorking, Mode=OneWay}"
                      Width="150"
                      Height="150" />
        <TextBlock Text="{x:Bind ViewModel.FriendlyErrorMessage, Mode=OneWay}" />
    </StackPanel>
</Window>
