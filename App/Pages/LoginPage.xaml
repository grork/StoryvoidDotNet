<Page x:Class="Codevoid.Storyvoid.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:localControls="using:Codevoid.Storyvoid.Controls">

    <Grid>
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="8"
                Background="{StaticResource CardBackgroundFillColorDefaultBrush}"
                BorderThickness="1"
                BorderBrush="{StaticResource ControlElevationBorderBrush}"
                Width="450"
                Height="450">
            <localControls:AuthenticationControl x:Name="Control"
                                                 Width="350"
                                                 Height="350" />
        </Border>
    </Grid>
</Page>
